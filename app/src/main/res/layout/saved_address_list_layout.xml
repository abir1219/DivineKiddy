<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llAddressList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Ashik"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvAddressType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Default"
                    android:background="@drawable/address_type_bg"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="5dp"
                    android:textSize="14sp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/black4"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="+91 97323 38420"
                android:textSize="13sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Nabadiganta,Mukundapur, Near Shib Mandir, Kolkata, West Bengal - 700 094"
                android:inputType="textMultiLine"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                tools:ignore="TextViewEdits" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEditAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textSize="16sp"
                    android:textColor="@color/black4"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvRemoveAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remove"
                    android:layout_marginStart="30dp"
                    android:textSize="16sp"
                    android:textColor="@color/black4"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black4"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>