<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Wishlist.WishlistFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlMenu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/llMenu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/black" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/wishlist"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/llMenu"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:id="@+id/llTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llWishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/llCart"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/flWishlist"
                        style="?attr/actionButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:clipToPadding="false"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:src="@drawable/wishlist_menu"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/tvWishlist_badge"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_gravity="right|end|top"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="-10dp"
                            android:background="@drawable/bottom_nav_background"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:text="0" />

                    </FrameLayout>

                    <!--<ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/wishlist_menu"
                        app:tint="@color/black" />-->


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingEnd="15dp">


                    <FrameLayout
                        android:id="@+id/flCart"
                        style="?attr/actionButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:clipToPadding="false"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/cart"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/tvcart_badge"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_gravity="right|end|top"
                            android:layout_marginTop="7dp"
                            android:layout_marginEnd="-10dp"
                            android:background="@drawable/bottom_nav_background"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            tools:text="0" />

                    </FrameLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvWishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlMenu"
            android:layout_marginTop="10dp"
            tools:itemCount="2" />

        <RelativeLayout
            android:id="@+id/rlNoRecordsFound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center"
            android:layout_below="@+id/rlMenu"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:lottie_fileName="no_records.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

            <TextView
                android:id="@+id/tvNoRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Records Found"
                android:gravity="center"
                android:layout_marginTop="-20dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_below="@+id/animationView"/>

            <TextView
                android:id="@+id/tvContinueShopping"
                android:layout_width="wrap_content"
                android:layout_below="@+id/tvNoRecords"
                android:background="@drawable/btn_bg"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:text="Continue Shopping"/>


        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>