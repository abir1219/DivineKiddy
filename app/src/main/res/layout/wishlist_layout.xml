<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:layout_height="295dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/c_birthday_box"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvRemove"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="100dp"
            android:elevation="5dp"
            android:layout_gravity="top|end"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_gravity="center"
                app:tint="@color/white"/>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="₹579"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSellingPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="₹819"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="13.5sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCostPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/strike_through"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:padding="5dp"
            android:text="₹2089"
            android:textColor="@color/grey"
            android:textSize="13sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvDiscountPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:text="61% off"
        android:paddingStart="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/green"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvMoveToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/move_to_cart"
        android:gravity="center"
        android:letterSpacing=".03"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/add_address_btn_bg"
        android:textColor="@color/black4"/>


</LinearLayout>